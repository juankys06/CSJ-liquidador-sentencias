<h2>@ViewData["Message"]</h2>

<div class="row">
    <form asp-controller="Convertion" asp-action="Tasas_Interes" method="post" id="convertionEA">
        <div class="col-md-6">
            <table class="table">
                <tbody>
                    <tr >
                        <td id="tasaE"><label>Tasa Efectiva</label></td>
                        <td id="tasaN" hidden><label>Tasa Nominal</label></td>
                        <td><input type="number" step="0.01" name="pInteresEA" required /> %</td>
                    </tr>
                   
                    <tr id="base">
                        <td><label>Base</label></td>
                        <td><input type="number" min="360" max="365" value="365" step="5" name="pPeriodosA" /></td>
                    </tr>
                </tbody>
            </table>
            <center id="resultados">
                <label>Efectiva Mensual: <span id="result">0</span> %</label>
                <br />
                <label>Efectiva Diario: <span id="result2">0</span> %</label>
            </center>
            <center id="resultado" hidden>
                <label>Efectiva Anual: <span id="result3">0</span> %</label>
                
            </center>
        </div>

        <div class="col-md-6">
            <div>
                <h5>Convertir de:</h5>
                <input type="radio" name="periodo" value="mensual" checked id="efectiva" /> Efectiva anual a efectiva mensual
                <br />
                <input type="radio" name="periodo" value="diario" id="efectiva1" /> Efectiva mensual a efectiva diaria
                <br />
                <input type="radio" name="periodo" value="anual" id="nominal" /> Nominal anual a efectiva anual
            </div>

            <div>
                <sub id="formulaEE">Fórmula Aplicada: <b>TR = ((1 - TE) ^ (P/DP)) - 1</b></sub>
                <sub hidden id="formulaNE">Fórmula Aplicada: <b>TE = (1 + (TN/n)) ^ n - 1</b></sub>
            </div>

            <button class="btn btn-custom" type="submit">Calcular</button>
            <button class="btn btn-danger" type="reset">Nuevo Cálculo</button>
        </div>
    </form>
</div>

@section Scripts{
    <script src="~/js/convertions.js" asp-append-version="true"></script>
}